    "/api/sensor-data/raw": {
      "get": {
        "tags": ["Sensores"],
        "summary": "Obtiene los datos crudos de sensores",
        "description": "Devuelve lecturas individuales sin agregaciones. Permite limitar el número de resultados y filtrar por dispositivo, tipo de sensor y rango de fechas.",
        "parameters": [
          {
            "in": "query",
            "name": "deviceId",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "ID del dispositivo para filtrar resultados."
          },
          {
            "in": "query",
            "name": "sensorType",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Tipo de sensor (por ejemplo, temperatura, humedad)."
          },
          {
            "in": "query",
            "name": "from",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            },
            "description": "Fecha inicial del rango en formato ISO 8601."
